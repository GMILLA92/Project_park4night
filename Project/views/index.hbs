<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js"></script>
  </head>

  <body>
    <nav>
      <ul class="nav-bar">
        <div id="to-left">
          <img class="van-logo" src="/images/VAN.png" alt="">
          {{!-- <p>AIRBNVAN</p> --}}
        </div>
        <div id="to-right">
            {{#unless user}}
                <a href="/signup">Sign Up</a> <span> | </span>
                <a href="/login">Log In</a> 
            {{/unless}}
            {{#if user}}
                <form action="/logout" method="post">
                    <button type="submit" id="logout_button">Logout</button>
                </form>
            {{/if}}
        </div>
      </ul>
    </nav>


    <section >
 

        <div class="map" id="map"></div>

        {{!-- Create hidden elements to store the display style of the map--}}
        <div class="hidden map-center"> {{mapCenter}}  </div>
        <div class="hidden map-zoom">  {{mapZoom}}  </div>

        {{!-- Create the markers and the popups for every location --}}
        {{!-- {{#each spotsDb}}
          <div class="hidden popup">
            <div class="scroll-container">
              {{#each this.images.imagesUrl}}
                <div class="scroll-page"> <img id="spot" src= "{{this}}"/> </div>
              {{/each}}
            </div>
            <h1>{{this.name}}</h1>
            <a href="/spot/{{this._id}}">See more</a>
          </div>

          <div class="hidden pos">  {{this.coordinates}}  </div>
          <div class="marker">  </div>
        {{/each}} --}}


    </section>

      
      {{!-- <div></div> --}}

        {{#if user}}
         <footer>
            <a href="/map" id="mapLogo">
            <img src="images/map-logo.png">
            </a>  
            <a href="/addSpot" id="addLogo">
            <img src="images/add-logo.png">
            </a>
            <a href="/profile" id="profileLogo">
            <img src="images/profile-logo.png">
            </a>
          </footer>
        {{/if}}
        {{#unless user}}
         <footer>
      {{!-- <div></div> --}}
        <h8>More than 100 spots all around Spain</h8>
        <h8>Join our AirBnVAN community!</h8></h8>
        
        
        {{/unless}}
 
  
    <script src="/js/script.js"></script>
  </body>


</html>