
<div id="spot-details">
  <div class="scroll-container">
    {{#each images.imagesUrl}}
     <div class="scroll-page"> <img id="spot" src= "{{this}}"/> </div>
    {{/each}}
</div>

    <h3>{{name}}</h3>
    <div id="rating">Rate:{{rating}}</div>
    <div id="description">{{description}}</div>
    
  
    
    <h3>{{province}}</h3>
    <h3>{{coordinates}}</h3>
    <h6>AMENITIES:</h6>

    {{#if amenities.Trash_can}}
    <h3>Trash can</h3>
    {{/if}}
     {{#if amenities.Shower}}
    <h3>Shower</h3>
    {{/if}}
     {{#if amenities.Toilet}}
    <h3>Toilet</h3>
    {{/if}}
     {{#if amenities.Drinking_water}}
    <h3>Drinking water</h3>
    {{/if}}
     {{#if amenities.Webpage}}
    <h3>Webpage</h3>
    {{/if}}
     {{#if amenities.Electricity}}
    <h3>Electricity</h3>
    {{/if}}
    
    <hr style="width: 70%;">

    {{#each comments}}
        <p4>{{this.description}}</p4>
        <p3>By: {{this.author.fullName}}</p3>
     <hr style="width: 70%;">
    {{/each}}

    


<button id="button_2"><a href="/addComment/{{_id}}">Add a new comment</a>
</button>
   
</div>


